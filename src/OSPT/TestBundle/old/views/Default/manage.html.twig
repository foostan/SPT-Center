{% extends 'OSPTTestBundle::layout.html.twig' %}

{% block containerClass %}container{% endblock %}
{% block body %}
<div class="row">
<div class="span12">
	<h1>Test list</h1>
	<p></p>
</div>

<div class="span12">

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Components</th>
			<th>Operation</th>
			<th>CreateAt</th>
			<th>UpdatedAt</th>
		</tr>
	</thead>
	<tbody>
		{% for test in tests %}
		<tr>
			<td>{{ test.id }}</td>
			<td>{{ test.name }}</td>
			<td>
				<a class="btn" href="{{ path('test_problem_index', {'id':test.name}) }}">Problems</a>
				<a class="btn" href="{{ path('test_state_index', {'id':test.name}) }}">States</a>
				<a class="btn" href="">Controller</a>
			</td>
			<td>
				<div class="btn-group">
					<a class="btn btn-warning" href="{{ path('test_edit', {'id':test.name}) }}">
						<i class="icon-edit icon-white"></i> Edit
					</a>
					<a class="btn btn-danger" href="{{ path('test_delete', {'id':test.name}) }}">
						<i class="icon-trash icon-white"></i> Delete
					</a>
				</div>
			</td>
			<td>{{ test.createdAt|date('Y/m/d H:i') }}</td>
			<td>{{ test.updatedAt|date('Y/m/d H:i') }}</td>
			</tr>
		{% else %}
			<tr>
					<td colspan="6">No tests found</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
</div>		

<div class="span12">
	<a class="btn btn-primary" href="{{ path('test_new') }}">
		<i class="icon-file icon-white"></i> Create a new test
	</a>
</div>


</div>		
{% endblock %}
