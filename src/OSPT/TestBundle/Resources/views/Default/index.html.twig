{% extends 'OSPTTestBundle::layout.html.twig' %}

{% block containerClass %}container{% endblock %}
{% block body %}
<div class="row">
	<div class="span12">
		<div class="hero-unit">
			<h1>Let's try self-placement tests!</h1>
			<p>Please select a test that you are interested in, and try it now!</p>
		</div>
		
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
		    {% for test in tests %}
			    <tr>
			        <td>{{ test.id }}</td>
			        <td>{{ test.name }}</td>
					<td>
						<a class="btn btn-info" href="{{ path('test_conduct_index', {'id':test.name}) }}">
							<i class="icon-pencil icon-white"></i> Try now
						</a>
					</td>
			    </tr>
		    {% else %}
		    	<tr>
		    	    <td colspan="3">No tests found</td>
		    	</tr>
		    {% endfor %}
			</tbody>
		</table>
		
		
