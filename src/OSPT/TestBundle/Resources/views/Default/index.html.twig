		<img src="{{ asset_url }} "  />
		{% endimage %}
		{% image '@OSPTTestBundle/Resources/public/images/hoge.png' %}
		<img src="{{ asset_url }} "  />
		{% endimage %}
		--> #}
	</div>
</div>

{% endblock %}
