{% extends 'OSPTTestBundle::layout.html.twig' %}

{% block containerClass %}container-fluid{% endblock %}
{% block body %}

<div class="row-fluid">

<!-- side bar -->
<div class="span3">
<div class="well sidebar-nav">
	<ul class="nav nav-list">
		<li class="nav-header">Test List</li>
		{% for test in tests %}
			<li><a href="{{ }}">{{ test.name }}</a></li>
		{% else %}
		{% endfor %}
	</ul>
</div>
</div>

<!-- main contents -->
<div class="span9">		

<div class="hero-unit">
	<h1>Let's try self-placement tests!</h1>
	<p>Please select a test that you are interested in, and try it now!</p>
</div>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
    {% for test in tests %}
	    <tr>
	        <td>{{ test.id }}</td>
	        <td>{{ test.name }}</td>
			<td>
				<a href="{{ path('test_conduct_index', {'id':test.name}) }}">
					<button class="btn btn-primary">Try now</button>
				</a>
			</td>
	    </tr>
    {% else %}
    	<tr>
    	    <td colspan="3">No tests found</td>
    	</tr>
    {% endfor %}
	</tbody>
</table>
		
</div>

</div>

{% endblock %}
